// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  ObjectId    String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime   @default(now()) @db.Timestamp
  id          String     @unique
  email       String?
  premium     DateTime?  @db.Timestamp
  usedPremium Boolean?
  guilds      Guild[]
  backups     Backup[]
  purchases   Purchase[]
}

model Purchase {
  ObjectId  String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime  @default(now()) @db.Timestamp
  User      User      @relation(fields: [userId], references: [id])
  userId    String
  products  Product[]
}

model Product {
  ObjectId    String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime  @default(now()) @db.Timestamp
  id          String    @unique @default(uuid())
  name        String
  description String?
  price       Float
  Purchase    Purchase? @relation(fields: [purchaseId], references: [ObjectId])
  purchaseId  String?   @db.ObjectId
}

model Guild {
  ObjectId  String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now()) @db.Timestamp
  id        String   @unique
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId    String
  backups   Backup[]
}

model Backup {
  ObjectId  String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now()) @db.Timestamp
  id        String   @unique
  data      Json
  premium   Boolean?
  Guild     Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  guildId   String
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId    String
}
