// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  ObjectId    String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now()) @db.Timestamp
  id          String   @unique
  premium     DateTime @default(now()) @db.Timestamp
  usedPremium Json?
  oldGuild    String?
  newGuild    String?
  guilds      Guild[]
  backups     Backup[]
}

model Guild {
  ObjectId  String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now()) @db.Timestamp
  id        String   @unique
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId    String
  backups   Backup[]
}

model Backup {
  ObjectId  String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now()) @db.Timestamp
  id        String   @unique
  data      Json
  premium   Boolean?
  Guild     Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  guildId   String
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId    String
}
